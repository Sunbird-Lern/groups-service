{
  "activities":[
    {
      "type": [
        "Textbook","Course"
      ],
      "baseUrl": "CONTENT_SERVICE_PORT",
      "apiUrl": "sunbird_cs_search_url",
      "request": {
              "id":"identifier",
              "fields": ["identifier","contentType","organisation","board","downloadUrl","contentEncoding","lastPublishedBy"]
       },
      "response": "$.result.content[*]",
      "headers": {
        "Authorization": "sunbird_authorization",
        "Content-Type" : "application/json",
        "Accept-Charset": "UTF-8"
      }

    },
    {
    "type": ["Announcement"],
     "baseUrl": "LEARNER_SERVICE_PORT",
     "apiUrl": "content_search_url",
     "request":{
           "id":"announcementIds",
           "fields": ["contentType"]
      },
     "response": "$.result.content[*]",
      "headers": {
              "Authorization": "sunbird_authorization",
              "Content-Type" : "application/json",
              "Accept-Charset": "UTF-8"
      }
    }

  ]

}